<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label for="pet_name">Name:</label>

  <br>

  <input type="text" id="pet_name" name="pet[name]">

  <br>

  <label>Choose an existing owner:</label>

  <% @owners.each do |owner| %>
    <input type="checkbox" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>"><%= owner.name %></input>
  <% end %>

  <br>

  <label> and/or create a new owner:</label>

  <br>

  <label for="owner_name">Owner Name:</label>
  <input type="text" id="owner_name" name="owner[name]">

  <br>

  <input type="submit" value="Create Pet">
</form>
