<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="pet_name">Name:</label>

  <br>

  <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>">

  <br>

  <label>Choose an existing owner:</label>

  <radiogroup>
    <% @owners.each do |owner| %>
      <input type="radio" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>><%= owner.name %></input>
    <% end %>

    <br>

    <label> and/or create a new owner:</label>

    <br>

    <label for="owner_name">Owner Name:</label>
    <input type="text" id="owner_name" name="owner[name]">
  </radiogroup>
  <br>

  <input type="submit" value="Update Pet">
</form>
